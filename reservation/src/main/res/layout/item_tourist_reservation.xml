<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:id="@+id/container">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_tourist"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_image_error"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_tourist_attraction"
            style="@style/TextViewTheme.Bold"
            android:textColor="@color/colorPrimaryText" />
        <TextView
            android:id="@+id/htm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/htm_tourist_attraction"
            android:textColor="@color/colorPrimaryDark" />
        <TextView
            android:id="@+id/capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/capasity_tourist_attraction"
            android:textColor="@color/colorPrimaryDark" />
        <TextView
            android:id="@+id/visitors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visitors_tourist_attraction"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</LinearLayout>