<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.detailticket.DetailTicketActivity">

    <ImageView
        android:id="@+id/image_qr_code"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20dp"
        android:src="@drawable/ic_image_error"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/btn_is_coming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_button_rounded"
        android:padding="24dp"
        android:text="@string/datang"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>